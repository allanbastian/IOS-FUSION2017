<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ba4230" />
            <gradient android:angle="-90" android:startColor="#f94d2f" android:endColor="#dd2202"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ed6015" />
            <solid android:color="#f24d1f"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ba4230" />
            <gradient android:angle="-90" android:startColor="#f94d2f" android:endColor="#dd2202" />
        </shape>
    </item>
</selector>
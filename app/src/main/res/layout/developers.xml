<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_centerInParent="true">

    <android.support.v7.widget.CardView
        android:id="@+id/card11"
        card_view:cardElevation="10dp"
        card_view:contentPadding="5dp"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/android_dev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:gravity="center"
                android:text="Android Developers"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/shashank"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shashank Gutgutia"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/allan"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Allan Bastian"
                android:textSize="20sp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card12"
        card_view:cardElevation="10dp"
        card_view:contentPadding="5dp"
        card_view:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card11"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ios_dev"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="iOS Developers"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/akshat"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Akshat Agarwal"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/pranav"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pranav Karani"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/indresh"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Indresh Arora"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/mehul"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mehul Singhal"
                android:textSize="20sp" />


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card22"
        card_view:cardElevation="10dp"
        card_view:contentPadding="5dp"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card12"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView

                android:id="@+id/backend_dev"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Backend Developer"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ajmal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ajmal Siddiqui"
                android:textSize="20sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card23"
        card_view:cardElevation="10dp"
        card_view:contentPadding="5dp"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card22"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/designers"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Designers"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/aritro"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aritro Paul"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/naman2"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Naman Krupia"
                android:textSize="20sp" />

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salonee Gupta"
                android:textSize="20sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
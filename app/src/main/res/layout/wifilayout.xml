<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <Button
        android:id="@+id/getWifi"
        android:padding="10dp"
        android:text=" SHOW WIFI CREDENTIALS "
        android:textSize="24sp"
        android:textColor="#ffffff"
        android:background="@drawable/buttonlook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textColor="#605e5d"
        android:layout_below="@+id/getWifi"
        android:layout_marginTop="5dp"
        android:text="Copyright (c) 2016-2017 VOLSBB Inc. All rights reserved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/wifi"
        android:src="@drawable/wifi"
        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/info"
        android:text="Wi-fi certified by VOLSBB"
        android:textColor="#000000"
        android:textSize="24sp"
        android:visibility="invisible"
        android:layout_below="@+id/wifi"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/user"
        android:paddingTop="20dp"
        android:visibility="invisible"
        android:text="USER ID"
        android:textColor="#000000"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/id"
        android:text="ZXEYWNSO"
        android:textSize="22sp"
        android:textColor="#000000"
        android:visibility="invisible"
        android:layout_below="@+id/user"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/pass"
        android:text="PASSWORD"
        android:textColor="#000000"
        android:textSize="22sp"
        android:visibility="invisible"
        android:paddingTop="5dp"
        android:layout_below="@+id/id"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/password"
        android:text="NDWI553EK"
        android:textColor="#000000"
        android:textSize="22sp"
        android:visibility="invisible"
        android:layout_below="@+id/pass"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
